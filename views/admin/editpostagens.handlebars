{{/each}}

<h4>Editar Postagem</h4>
<div class="card">
  <div class="card-body">
    <form action="/admin/postagens/edit" method="POST">
			<input type="hidden" value="{{postagem._id}}" name="id">
      <div class="mb-3">
        <label for="titulo" class="form-label">Título</label>
        <input type="text" class="form-control" id="titulo" name="titulo" value="{{postagem.titulo}}">
      </div>

      <div class="mb-3">
        <label for="slug" class="form-label">Slug</label>
        <input type="text" class="form-control" id="slug" name="slug" value="{{postagem.slug}}">
      </div>

      <div class="mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="{{postagem.descricao}}">
      </div>

      <div class="mb-3">
        <label for="conteudo" class="form-label">Conteúdo</label>
        <textarea class="form-control" id="conteudo" name="conteudo">{{postagem.conteudo}}</textarea>
      </div>

      <div class="mb-3">
        <label for="categoria" class="form-label">Categoria</label>
        <select id="categoria" name="categoria" class="form-select">
          {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
          {{else}}
          <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
      </div>

      <button type="submit" class="btn btn-success">Editar Postagem</button>
    </form>
  </div>
</div>